def print_board(board):
    """Вывод игрового поля."""
    print("\n")
    for row in board:
        print(" | ".join(row))
        print("-" * 5)
    print("\n")

def check_winner(board, player):
    """Проверка на победу игрока."""
    # Проверка строк, столбцов и диагоналей
    for row in board:
        if all(cell == player for cell in row):
            return True
    for col in range(3):
        if all(row[col] == player for row in board):
            return True
    if all(board[i][i] == player for i in range(3)) or all(board[i][2 - i] == player for i in range(3)):
        return True
    return False

def is_full(board):
    """Проверка на заполненность поля."""
    return all(cell != " " for row in board for cell in row)

def play_game():
    """Основная функция игры."""
    # Инициализация игрового поля
    board = [[" " for _ in range(3)] for _ in range(3)]
    players = ["X", "O"]
    current_player = 0

    print("Добро пожаловать в игру Крестики-нолики!")
    print_board(board)

    while True:
        print(f"Ход игрока {players[current_player]}:")
        try:
            row = int(input("Введите номер строки (0, 1, 2): "))
            col = int(input("Введите номер столбца (0, 1, 2): "))
            if board[row][col] == " ":
                board[row][col] = players[current_player]
                print_board(board)

                if check_winner(board, players[current_player]):
                    print(f"Игрок {players[current_player]} победил!")
                    break
                elif is_full(board):
                    print("Ничья!")
                    break

                current_player = 1 - current_player  # Смена игрока
            else:
                print("Эта клетка уже занята, выберите другую.")
        except (ValueError, IndexError):
            print("Неверный ввод. Введите числа от 0 до 2 для строки и столбца.")

    print("Игра окончена!")

# Запуск игры
if __name__ == "__main__":
    play_game()
